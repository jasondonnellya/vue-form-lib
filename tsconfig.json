{
  "include": ["src/*.ts", "test/*.spec.ts", "components/*.spec.ts", "components/*.vue"],
  "exclude": ["node_modules", "test/*.spec.ts", "components/*.spec.ts"],
  "compilerOptions": {
    "types": ["vue"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "lib": ["ES2023", "DOM"],
    "declarationDir": "dist/types/",
    "declaration": true
  }
}
